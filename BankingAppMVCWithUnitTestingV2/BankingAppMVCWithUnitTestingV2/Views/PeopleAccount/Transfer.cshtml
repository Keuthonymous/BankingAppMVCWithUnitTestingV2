@model BankingAppMVCWithUnitTestingV2.ViewModels.PersonCheckBoxVM

@{
    ViewBag.Title = "Transfer";
}

<h2>Transfer</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("SelectAccount", "PeopleAccount", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.People.First().Fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People.First().Lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People.First().PersonNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People.First().Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People.First().BirthDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.People)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.CheckBoxFor(model => model.IsChecked, new { id = item.ID})
                </td>
            </tr>
        }

    </table>
    <input type="submit" class="btn btn-default" value="Select"/>
}
